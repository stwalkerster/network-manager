@model DnsWebApp.Models.Database.TopLevelDomain

@{
    ViewBag.Title = "Editing TLD";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing TLD .@Model.Domain</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Delete", "TopLevelDomain", new {item = Model.Id})" class="btn btn-sm btn-danger ml-2">
            <i class="fas fa-trash"></i>&nbsp;Delete
        </a>
    </div>
</div>

<form asp-controller="TopLevelDomain" asp-action="Edit">
    <partial name="TLDForm"/>
</form>