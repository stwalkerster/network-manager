@model DnsWebApp.Models.Database.Currency

<div class="row">
    <div class="col-md-12">
        <fieldset>
            <legend>Currency</legend>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="form-group col-lg-4">
                    <label asp-for="Code"></label>
                    <input asp-for="Code" class="form-control"/>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>    
                
                <div class="form-group col-lg-4">
                    <label asp-for="Symbol"></label>
                    <input asp-for="Symbol" class="form-control"/>
                    <span asp-validation-for="Symbol" class="text-danger"></span>
                </div>  
            </div>
            
        </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <fieldset>
            <legend>Exchange rate</legend>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="ExchangeRate"></label>
                        <input asp-for="ExchangeRate" class="form-control"/>
                        <span asp-validation-for="ExchangeRate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="ExchangeRateUpdated"></label>
                        <input asp-for="ExchangeRateUpdated" class="form-control"/>
                        <span asp-validation-for="ExchangeRateUpdated" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>
    
<div class="row">
    <div class="col-md-6">
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;Save settings</button>
    </div>
</div>