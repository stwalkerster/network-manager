@model DnsWebApp.Models.Dns.MxRecordViewModel

<partial name="NameTtlEditControl" />

<div class="row">
    <div class="col-lg-4">
        <div class="form-group">
            <label asp-for="MailServer"></label>
            <input asp-for="MailServer" class="form-control"/>
            <span asp-validation-for="MailServer" class="text-danger"></span>
            <small class="form-text text-muted">This must point to an equivalent A/AAAA record, not a CNAME</small>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="Preference"></label>
            <input asp-for="Preference" class="form-control"/>
            <span asp-validation-for="Preference" class="text-danger"></span>
            <small class="form-text text-muted">Preference order for other mail servers to use. Lowest goes first.</small>
        </div>
    </div>
</div>

<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;Save</button>
