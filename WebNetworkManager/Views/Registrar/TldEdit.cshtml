@model DnsWebApp.Models.Database.RegistrarTldSupport

@{
    ViewBag.Title = "Edit TLD support for Registrar";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit TLD support for Registrar</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Delete", "Registrar", new {item = Model.RegistrarId, tld = Model.Id})" class="btn btn-sm btn-outline-danger ml-2">
            <i class="fas fa-trash"></i>&nbsp;Delete
        </a>
    </div>
</div>

<form asp-controller="Registrar" asp-action="TldEdit">
    <input type="hidden" asp-for="RegistrarId" />
    <input type="hidden" asp-for="TopLevelDomainId" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RenewalPrice"></label>
                <input asp-for="RenewalPrice" class="form-control"/>
                <span asp-validation-for="RenewalPrice" class="text-danger"></span>
                <small class="form-text text-muted">Price of a 1-year renewal on this TLD</small>
            </div>
        </div>        
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="TransferPrice"></label>
                <input asp-for="TransferPrice" class="form-control"/>
                <span asp-validation-for="TransferPrice" class="text-danger"></span>
                <small class="form-text text-muted">Price of a transfer to this registrar</small>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="custom-control custom-switch">
            <input class="custom-control-input" asp-for="TransferIncludesRenewal"/>
            <label class="custom-control-label" asp-for="TransferIncludesRenewal"></label>
            <small class="form-text text-muted">Whether the transfer price includes an extra year</small>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;Save settings</button>
        </div>
    </div>
</form>