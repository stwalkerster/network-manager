@model DnsWebApp.Models.Database.Registrar

@{
    ViewBag.Title = "Editing Registrar";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing Registrar @Model.Name</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("TldList", "Registrar", new {item = Model.Id})" class="btn btn-sm btn-outline-secondary ml-2">
            <i class="fas fa-server"></i>&nbsp;TLD Support
        </a>
        
        <a href="@Url.Action("Item", "Registrar", new {item = Model.Id})" class="btn btn-sm btn-outline-secondary ml-2">
            <i class="fas fa-globe"></i>&nbsp;Domain list
        </a>
        
        <a href="@Url.Action("Delete", "Registrar", new {item = Model.Id})" class="btn btn-sm btn-outline-danger ml-2">
            <i class="fas fa-trash"></i>&nbsp;Delete
        </a>
    </div>
</div>

<form asp-controller="Registrar" asp-action="Edit">
    <partial name="RegistrarForm"/>
</form>