@using DnsWebApp.Models
@model List<DnsWebApp.Models.Database.Domain>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Domains";
    ViewBag.Active = "Domain";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">All domains</h1>
    
    <div class="btn-toolbar mb-2 mb-md-0">
        @if (User.IsInRole(RoleDefinition.DnsManager))
        {
            <a href="@Url.Action("New", "Domain")" class="btn btn-sm btn-outline-success">
                <i class="fas fa-plus"></i>&nbsp;New domain
            </a>
        }
    </div>
</div>

<partial name="DomainList" />