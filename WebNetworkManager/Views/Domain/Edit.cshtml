@model DnsWebApp.Models.ViewModels.DomainCommand

@{
    ViewBag.Title = "Editing domain";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing domain @(Model.Name)</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Delete", "Domain", new {item = Model.Id})" class="btn btn-sm btn-danger ml-2">
            <i class="fas fa-trash"></i>&nbsp;Delete
        </a>
    </div>
</div>

<form asp-controller="Domain" asp-action="Edit">
    <input asp-for="TopLevelDomain" type="hidden"/>
    <input asp-for="BaseName" type="hidden"/>
    <partial name="DomainForm"/>
</form>