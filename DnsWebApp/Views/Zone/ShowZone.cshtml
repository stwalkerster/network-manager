@model DnsWebApp.Models.Database.Zone
@{
    ViewBag.Title = "Zone";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Zone @(Model.Name + "." + Model.TopLevelDomain.Domain)</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("EditZone", "Zone", new {zone = Model.Id})" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-pencil-alt"></i>&nbsp;Edit SOA
        </a>
    </div>
</div>