@model DnsWebApp.Models.ViewModels.ZoneCommand

<legend>Zone settings</legend>

<div class="form-group">
    <div class="custom-control custom-switch">
        <input class="custom-control-input" asp-for="Enabled"/>
        <label class="custom-control-label" asp-for="Enabled"></label>
        <small class="form-text text-muted">Enables or disables this zone in the DNS server. Disabling the zone will mean this zone is not served!</small>
    </div>
</div>

<div class="form-group">
    <label asp-for="Registrar"></label>
    <select asp-for="Registrar" asp-items="Model.Registrars" class="form-control">
        <option value="">(none)</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="RegistrationExpiry"></label>
    <input asp-for="RegistrationExpiry" class="form-control"/>
    <small class="form-text text-muted">The date the domain registration expires with the registrar.</small>
</div>