@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
    ViewBag.Active = "Home";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>

<h2>DNS Zones</h2>
<div class="row">
    <div class="col-lg-6">
        <h3>TLD stats</h3>
        <canvas id="tldChart"></canvas>
    </div>
    <div class="col-lg-6">
        <h3>Record type stats</h3>
        <canvas id="typeChart"></canvas>
    </div>
</div>



<script>
var ctx = document.getElementById('tldChart').getContext('2d');
var tldChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
        datasets: [{
            data: [10,20,30,40],
            backgroundColor: [
                'rgba(0, 168, 255,1.0)',
                'rgba(156, 136, 255,1.0)',
                'rgba(251, 197, 49,1.0)',
                'rgba(76, 209, 55,1.0)',
                'rgba(72, 126, 176,1.0)',
                'rgba(232, 65, 24,1.0)',
                'rgba(127, 143, 166,1.0)',
                'rgba(39, 60, 117,1.0)',
                'rgba(53, 59, 72,1.0)'
            ]
        }],
        labels: [
            "foo", "bar", "baz", "quux"
        ]
    },
    options: {
        circumference: Math.PI,
        rotation: -Math.PI        
    }
});

